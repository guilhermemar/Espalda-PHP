<?xml version="1.0" encoding="UTF-8" ?>
<project name="Espalda-PHP" default="welcome" basedir="." description="Library for handling specific espalda markup in html's pages to facilitate development of dynamic pages">
	
	<property name="message" value="hello world"/>
	
	<target name="welcome">
		<echo msg="${message}"/>
	</target>
	
	<target name="docs">
		<mkdir dir="./docs/api"/>
		
		<phpdoc2 title="API Documentation" destdir="./docs/api" template="clean">
		   <fileset dir="./src">
		      <include name="*.php" />
		   </fileset>
		</phpdoc2>
	</target>
	
	<target name="test">
        <phpunit printsummary="true">
            <batchtest>
                <fileset dir="tests">
                    <include name="*Test.php"/>
                </fileset>
            </batchtest>
        </phpunit>
    </target>
	
</project>